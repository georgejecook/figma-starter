{
    "name": "figma-starter",
    "version": "0.1.0",
    "description": "Starter kit for creating Figma plugins",
    "keywords": [
        "Figma",
        "Plugins",
        "Starter kit",
        "Webpack",
        "React"
    ],
    "repository": "https://github.com/p1t1ch/figma-starter",
    "license": "MIT",
    "scripts": {
        "dev": "NODE_ENV=development webpack --watch",
        "prod": "NODE_ENV=production webpack",
        "eslint": "eslint . --ext js,jsx,ts,tsx --fix",
        "tsc": "yarn pnpify tsc"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn tsc && lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "git add"
        ]
    },
    "eslintIgnore": [
        "node_modules",
        "build"
    ],
    "dependencies": {
        "@babel/core": "^7.8.7",
        "@babel/preset-react": "^7.8.3",
        "@babel/preset-typescript": "^7.8.3",
        "@babel/types": "^7.8.7",
        "@emotion/babel-preset-css-prop": "^10.0.27",
        "@emotion/core": "^10.0.28",
        "@svgr/webpack": "^5.2.0",
        "@typescript-eslint/eslint-plugin": "^2.23.0",
        "@typescript-eslint/parser": "^2.23.0",
        "@yarnpkg/pnpify": "^2.0.0-rc.19",
        "babel-loader": "^8.0.6",
        "clean-webpack-plugin": "^3.0.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-import-resolver-node": "^0.3.3",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.19.0",
        "eslint-plugin-react-hooks": "^2.5.0",
        "html-webpack-inline-source-plugin": "^0.0.10",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.8",
        "pnp-webpack-plugin": "^1.6.4",
        "prettier": "^1.19.1",
        "react": "^16.13.0",
        "react-dom": "^16.13.0",
        "terser-webpack-plugin": "^2.3.5",
        "typescript": "^3.8.3",
        "webpack": "^4.42.0",
        "webpack-cli": "^3.3.11",
        "webpackbar": "^4.0.0"
    },
    "devDependencies": {
        "@types/babel__core": "7.1.6",
        "@types/eslint": "6.1.8",
        "@types/eslint-plugin-prettier": "2.2.0",
        "@types/figma": "^1.0.3",
        "@types/file-loader": "4.2.0",
        "@types/html-webpack-plugin": "3.2.2",
        "@types/prettier": "1.19.0",
        "@types/react": "16.9.23",
        "@types/react-dom": "16.9.5",
        "@types/terser-webpack-plugin": "2.2.0",
        "@types/webpack": "4.41.7",
        "@types/webpackbar": "2.6.0"
    },
    "engines": {
        "node": ">= 11.7.0"
    }
}
